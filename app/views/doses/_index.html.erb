<div class="d-flex justify-content-between align-items-end px-4 py-2">
<h1>Ingredients </h1>
</div>


<div class="shadow mb-5 bg-white rounded">
  <% @cocktail.doses.each do |dose| %>
    <div class="border-bottom py-2 px-3">
      <div class="d-flex justify-content-between align-items-center">
        <div>

          <%= dose.description %>
          <%= dose.ingredient.name %>
          <%= link_to 'delete dose', dose_path(dose), class: 'btn btn-outline-danger btn-sm', method: 'delete', data: { confirm: 'Are you sure? Really?' } %>


        </div>
      </div>
    </div>
  <% end %>
</div>
